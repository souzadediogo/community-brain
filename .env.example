# ===========================================
# Application Configuration
# ===========================================

# JWT Secret for authentication
JWT_SECRET=your-secret-key-change-in-production

# ===========================================
# LLM API Keys
# ===========================================

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Cohere (optional - for reranking)
COHERE_API_KEY=your-cohere-api-key

# Mistral AI (optional)
MISTRAL_API_KEY=your-mistral-api-key

# ===========================================
# Orchestrator Configuration
# ===========================================

# Which orchestration framework to use
# Options: langchain, llamaindex, haystack, promptsql
ORCHESTRATOR=langchain

# ===========================================
# Vector Store Configuration
# ===========================================

# Which vector store to use
# Options: qdrant, faiss, pinecone, weaviate
VECTOR_STORE=qdrant

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL connection (set by docker-compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/braintrust

# ===========================================
# Service URLs (for local development)
# ===========================================

NEXT_PUBLIC_API_URL=http://localhost:4000
COMMUNITY_SERVICE_URL=http://localhost:4001
ASSISTANT_SERVICE_URL=http://localhost:5000
EVALUATION_SERVICE_URL=http://localhost:5001

# ===========================================
# Infrastructure URLs (set by docker-compose)
# ===========================================

QDRANT_URL=http://localhost:6333
RABBITMQ_URL=amqp://localhost:5672

# ===========================================
# Feature Flags
# ===========================================

# Enable reranking (Phase 3)
ENABLE_RERANKING=false
DEFAULT_RERANKER=sentence-transformer

# Enable evaluation/benchmarking (Phase 2)
ENABLE_EVALUATION=true

# ===========================================
# Development Settings
# ===========================================

NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
PYTHONUNBUFFERED=1
